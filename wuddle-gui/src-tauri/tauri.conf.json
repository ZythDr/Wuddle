{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wuddle-gui",
  "version": "1.0.2",
  "identifier": "io.github.zythdr.wuddle",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Wuddle",
        "width": 1100,
        "height": 720,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
